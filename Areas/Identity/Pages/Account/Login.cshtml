@page
@model LoginModel

<html lang="en">
<head>
    <title>@ViewData["Title"] The Magic Shelf - Login</title>

    <style>
        .title {
            font-family: 'White Storm';
            font-size: 60px;
            margin-left: 500px;
        }

        .form {
            border: 5px solid #3a2613;
            font-family: 'Times New Roman';
            padding: 15px;
            margin-left: 500px;
            font-size: 25px;
            width: 450px;
            height: 380px;
            font-weight: bold;
            position: relative;
        }

        .quest {
            position: absolute;
            left: 520px;
            top: 480px;
            font-family: 'White Storm';
            font-size: 35px;
        }

        .links {
            color: #ad7138;
            text-decoration: none;
            display: inline-block;
        }

            .links:hover {
                transform: scale(1.1);
                color: #c78a52;
                text-decoration: underline;
            }

            .links:active {
                color: black;
                text-decoration: none;
            }

        .tempdata {
            color: #cc3300;
            font-family: 'White Storm';
            font-size: 30px;
            position: absolute;
            left: 140px;
            top: 250px;
        }

        .button {
            border: 4px solid #3a2613;
            background-color: #ffdf80;
            padding: 15px;
            font-family: 'White Storm';
            color: #3a2613;
            font-size: 30px;
            position: absolute;
            left: 15px;
            top: 235px;
            cursor: pointer;
        }

            .button:hover {
                opacity: 0.7;
            }
    </style>

</head>

<body>

    <div>
        <h1 class="title">Login:</h1>

        <form class="form" method="post">
            <label for="username">Username:</label><br />
            <input type="text" id="username" asp-for="Input.Username" size="50" required />
            <br /><br />

            <label for="password">Password:</label><br />
            <input type="password" id="password" asp-for="Input.Password" size="50" required />
            <br /><br />

            <input type="checkbox" id="remember" asp-for="Input.RememberMe" />
            <label for="remember">Remember me </label>

            <span class="tempdata">@TempData["LogInFail"]</span>
            <span class="tempdata" style="left: 180px;">@TempData["IncorrectPassword"]</span>

            <input type="submit" class="button" value="Log in" />
        </form>
    </div>

    <div class="quest">
        <a class="links" asp-page="ForgotPassword">I forgot my password</a>
        <br />
        <a class="links" asp-page="Register">I don't have an account</a>
    </div>


</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

