@page
@model IndexModel

@using TMS.Models;
@inject UserManager<UserDB> UserManager
@{
    Layout = "_Layout.cshtml";
}
@{
    ViewData["Title"] = "Profile -";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<html lang="en">
<head>
    <title></title>

    <style>
        .div1 {
            text-align: center;
            font-family: 'White Storm';
            margin-top: 20px;
            font-size: 40px;
            word-break: break-all;
        }

        .div2 {
            margin-top: 20px;
            text-align: center;
            positin: relative;
        }

        .buttons {
            border: 4px solid #3a2613;
            background-color: #ffdf80;
            font-family: 'White Storm';
            padding: 15px;
            color: #3a2613;
            font-size: 40px;
            cursor: pointer;
            position: absolute;
        }

            .buttons:hover {
                opacity: 0.7;
            }

    </style>

</head>

<body>

    <div class="div1">
        <h1>Welcome @UserManager.GetUserName(User)!</h1>
        <h2 style="color: #009900">@TempData["Registered"]</h2>
        <h2 style="color: #009900">@TempData["Succeeded"]</h2>
    </div>

    <div class="div2">
        <a class="buttons" style="margin-left:-220px; text-decoration: none;" asp-area="Guest" asp-controller="GuestViews" asp-action="Books">Browse the <br /> store</a>
        <a class="buttons" style="margin-left:50px; background-color: #668cff; padding: 37px;" asp-area="Identity" asp-page="/Account/Manage/EditInfo">Edit info</a>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
