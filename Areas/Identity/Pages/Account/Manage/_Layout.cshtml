@using TMS.Models;
@inject UserManager<UserDB> UserManager

@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<html lang="en">
<head>
    <title>@ViewData["Title"] @UserManager.GetUserName(User)</title>

    <style>
        .main {
            border: 4px solid #3a2613;
            margin-top: 50px;
            margin-left: 350px;
            margin-right: 350px;
            height: 510px;
            position: relative;
        }

        .menubtn {
            margin-top: -50px;
            margin-left: 770px;
            padding: 10px;
            background-color: #ad7138;
            position: absolute;
            display: block;
        }

        .menulist {
            display: none;
            position: absolute;
            margin-left: -180px;
            margin-top: -10px;
            width: 185px;
            height: 300px;
            z-index: 1;
            list-style-type: none;
        }

        .menubtn:hover .menulist {
            display: block;
        }

    </style>

</head>

<body>

    <div class="main">

        <div style="height:50px;">
            <h1 style="padding: 10px; font-family: 'White Storm'; font-size: 37px;"><i class="fa fa-solid fa-user"></i> @UserManager.GetUserName(User)</h1>

            <button class="menubtn">
                <i class="fa fa-solid fa-bars"></i>

                <ul class="menulist">
                    <li><partial name="_ManageNav" /></li>
                </ul>

            </button>

            <hr style="height: 3px; background: #3a2613; margin-top: 0px;" />

        </div>

        <p style="padding-bottom: 25px;"></p>


        <div>
            @RenderBody()
        </div>

    </div>

</body>
</html>


@section Scripts {
    @RenderSection("Scripts", required: false)
}
