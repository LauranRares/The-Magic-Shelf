@model BooksDB

<html lang="en">
<head>
    <title>@ViewData["Title"] The Magic Shelf - Edit</title>

    <style>
        .title {
            font-family: 'White Storm';
            font-size: 60px;
            margin-left: 500px;
        }

        .form {
            border: 5px solid #3a2613;
            font-family: 'Times New Roman';
            padding: 15px;
            margin-left: 500px;
            font-size: 25px;
            width: 450px;
            font-weight: bold;
            position: relative;
        }

        .genres {
            padding: 5px;
            font-size: 20px;
            font-weight: normal;
        }

        .img {
            border: 0.5px solid black;
            background-color: white;
            width: 365px;
        }

        input::file-selector-button {
            background-color: #ffdf80;
        }

            input::file-selector-button:hover {
                opacity: 0.7;
            }

        .button {
            border: 4px solid #3a2613;
            background-color: #ffdf80;
            padding: 15px;
            font-family: 'White Storm';
            color: #3a2613;
            font-size: 30px;
            position: absolute;
            left: 360px;
            top: 430px;
            cursor: pointer;
        }

        .buttonchange {
            background-color: #ffdf80;
            border: 3px solid black;
            padding: 1.5px;
            cursor: pointer;
        }

            .button:hover, .buttonchange:hover {
                opacity: 0.7;
            }
    </style>

</head>

<body>

    <div>
        <h1 class="title">Edit:</h1>

        <form class="form" asp-controller="TMS" asp-action="Edit" method="post" enctype="multipart/form-data">

            <label for="title">Title:</label><br />
            <input type="text" id="title" asp-for=Title size="50" required />
            <br /><br />

            <label for="author">Author:</label><br />
            <input type="text" id="author" asp-for=Author size="50" required />
            <br /><br />

            <label for="image">Image:</label><br />
            <input asp-for="Image" hidden />
            <input type="file" id="image" asp-for=Image title="" name="img" class="img" />
            <input type="submit" asp-action="EditImage" asp-route-id="@Model.Id" value="Change" class="buttonchange">
            <br /><br />

            <label for="genre1">Main genre:</label>
            <select id="genre1" asp-for=Genre1>
                <option value="Adventure">Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Dystopian">Dystopian</option>
                <option value="Fantasy">Fantasy</option>
                <option value="History">History</option>
                <option value="Horror">Horror</option>
                <option value="Political">Political</option>
                <option value="Romance">Romance</option>
                <option value="Science Fiction">Science Fiction</option>
            </select>
            <br /><br />

            <label for="genre2">Second genre:</label>
            <select id="genre2" asp-for=Genre2>
                <option value="Adventure">Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Dystopian">Dystopian</option>
                <option value="Fantasy">Fantasy</option>
                <option value="History">History</option>
                <option value="Horror">Horror</option>
                <option value="Political">Political</option>
                <option value="Romance">Romance</option>
                <option value="Science Fiction">Science Fiction</option>
            </select>
            <br /><br />

            <label for="copies">Number of copies:</label>
            <input type="number" asp-for=Quantity id="copies" min="1" style="width: 50px;" required />
            <br /><br />

            <label for="price">Price:</label><br />
            <input type="text" id="price" asp-for=Price size="20" required /><br />

            <span style="color: #cc3300; font-family: 'White Storm';  font-size: 30px;">@TempData["Mistake"]</span>
            <span style="color: #47d147; font-family: 'White Storm';  font-size: 30px;">@TempData["ImageUpload"]</span>
            <span style="color: #cc3300; font-family: 'White Storm';  font-size: 30px;">@TempData["NoImage"]</span><br />

            <input type="submit" class="button" value="Done" />
        </form>

    </div>

</body>
</html>