@page
@model ForgotPasswordModel

<html lang="en">
<head>
    <title>@ViewData["Title"] The Magic Shelf - Reset Password</title>

    <style>
        .title {
            font-family: 'White Storm';
            font-size: 60px;
            margin-left: 500px;
        }

        .form {
            border: 5px solid #3a2613;
            font-family: 'Times New Roman';
            padding: 15px;
            margin-left: 500px;
            font-size: 25px;
            width: 450px;
            height: 450px;
            font-weight: bold;
            position: relative;
        }

        .quest {
            position: absolute;
            left: 520px;
            top: 590px;
            font-family: 'White Storm';
            font-size: 35px;
        }

        .links {
            color: #ad7138;
            text-decoration: none;
            display: inline-block;
        }

            .links:hover {
                transform: scale(1.1);
                color: #c78a52;
                text-decoration: underline;
            }

            .links:active {
                color: black;
                text-decoration: none;
            }

        .tempdata {
            color: #cc3300;
            font-family: 'White Storm';
            font-size: 30px;
            position: absolute;
            left: 140px;
            top: 365px;
        }

        .button {
            border: 4px solid #3a2613;
            background-color: #ffdf80;
            padding: 15px;
            font-family: 'White Storm';
            color: #3a2613;
            font-size: 30px;
            position: absolute;
            left: 15px;
            top: 345px;
            cursor: pointer;
        }

            .button:hover {
                opacity: 0.7;
            }
    </style>

</head>

<body>

    <div>
        <h1 class="title">Reset password:</h1>

        <form class="form" method="post">
            <label for="username">Username:</label><br />
            <input type="text" id="username" asp-for="Input.Username" size="50" required />
            <br /><br />

            <label for="pet">Pet name (security question):</label><br />
            <input type="text" id="pet" asp-for="Input.Pet" size="50" required />
            <br /><br />

            <label for="password">New password:</label><br />
            <input type="password" id="password" asp-for="Input.NewPassword" size="50" required />
            <br /><br />

            <label for="cpassword">Confirm Password:</label><br />
            <input type="password" id="cpassword" asp-for="Input.ConfirmPassword" size="50" required />
            <br /><br /><br /><br />

            <span class="tempdata">@TempData["ResetFailed"]</span>
            <span class="tempdata" style="top: 335px;">@TempData["ResetFailed2"]</span>
            <span class="tempdata" style="top: 345px;">@TempData["ResetFailed3"]</span>
            <span class="tempdata" style="top: 345px; color: #009900;">@TempData["ResetSuccessfully"]</span>

            <input type="submit" class="button" value="Reset" />
        </form>
    </div>

    <div class="quest">
        <a class="links" asp-page="Login">Back to login</a>
    </div>


</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

