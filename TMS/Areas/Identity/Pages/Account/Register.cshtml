@page
@model RegisterModel

<html lang="en">
<head>
    <title>@ViewData["Title"] The Magic Shelf - Register</title>

    <style>
        .title {
            font-family: 'White Storm';
            font-size: 60px;
            margin-left: 500px;
        }

        .form {
            border: 5px solid #3a2613;
            font-family: 'Times New Roman';
            padding: 15px;
            margin-left: 500px;
            font-size: 25px;
            width: 450px;
            font-weight: bold;
            position: relative;
        }

        .tempdata {
            color: #cc3300;
            font-family: 'White Storm';
            font-size: 30px;
            position: absolute;
            left: 150px;
            top: 370px;
        }

        .button {
            border: 4px solid #3a2613;
            background-color: #ffdf80;
            padding: 15px;
            font-family: 'White Storm';
            color: #3a2613;
            font-size: 30px;
            position: absolute;
            left: 15px;
            top: 375px;
            cursor: pointer;
        }

            .button:hover {
                opacity: 0.7;
            }
    </style>

</head>

<body>

    <div>
        <h1 class="title">Create an account:</h1>

        <form class="form" method="post">
            <label for="username">Username:</label><br />
            <input type="text" id="username" asp-for="Input.Username" size="50" required />
            <br /><br />

            <label for="password">Password:</label><br />
            <input type="password" id="password" asp-for="Input.Password" size="50" required />
            <br /><br />

            <label for="cpassword">Confirm Password:</label><br />
            <input type="password" id="cpassword" asp-for="Input.ConfirmPassword" size="50" required />
            <br /><br />

            <label for="pet">Pet name <br />(in case of forgotten password):</label><br />
            <input type="text" id="pet" asp-for="Input.Pet" size="50" required />
            <br /><br /><br /><br />

            <span class="tempdata">@TempData["UsernameExists"]</span>
            <span class="tempdata">@TempData["PasswordError"]</span>
            <span class="tempdata" style="top: 360px;">@TempData["PasswordInfo"]</span>

            <input type="submit" class="button" value="Create" />
        </form>
    </div>


</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
